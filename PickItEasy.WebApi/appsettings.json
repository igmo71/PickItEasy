{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres_container;Database=PickItEasyDb;Username=PickItEasyUser;Password=Pwd4PickItEasy;Persist Security Info=True"
  },
  "EventBus": {
    "RabbitMq": {
      "HostName": "rabbitmq_container"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq_container:5341" }
      }
    ],
    "Properties": {
      "Application": "PickItEasy.WebApi",
      "Environment": "Production"
    }
  },
  "AllowedHosts": "*"
}
