    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PickItEasy.Application\PickItEasy.Application.csproj" />
    <ProjectReference Include="..\PickItEasy.EventBus\PickItEasy.EventBus.csproj" />
    <ProjectReference Include="..\PickItEasy.Persistence\PickItEasy.Persistence.csproj" />
  </ItemGroup>

</Project>
