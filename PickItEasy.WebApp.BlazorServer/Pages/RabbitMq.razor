@page "/rabbit"
@using PickItEasy.EventBus.RabbitMq
@implements IDisposable
<h3>RabbitMq</h3>
<span>Message: @pageMessage</span>

@code {
    private string pageMessage = "Hello";

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        if (firstRender)
        {
            WhsOrderOutConsumer.MessageReceived += MessageReceivedHandle;
        }
    }

    private void MessageReceivedHandle(object? sender, string message)
    {
        pageMessage = message;
        Console.WriteLine($"Blazor received order: {message}");
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        WhsOrderOutConsumer.MessageReceived -= MessageReceivedHandle;
    }
}